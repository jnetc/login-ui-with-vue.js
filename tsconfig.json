{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    // "composite": true, // incremental mode is not yet support
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "incremental": true, // incremental mode is not yet support
    // "isolatedModules": true, // incremental mode is not yet support
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@Components/*": ["./src/components/*"],
      "@Helpers/*": ["./src/helpers/*"],
      "@Hooks/*": ["./src/components/hooks/*"],
      "@Stores/*": ["./src/stores/*"],
      "@Styles/*": ["./styles/*"]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ]
}
